<h1>Candidatos</h1>

<%= render 'search' %>

<table>
  <thead>
    <tr>
      <th>Cpf</th>
      <th>Nome</th>
      <th>Data Nascimento</th>
      <th>CEP</th>
      <th>Logradouro</th>
      <th>Numero</th>
      <th>Bairro</th>
      <th>UF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
      <% @candidatos.each do |candidato| %>
        <td><%= candidato.cpf %></td>
        <td><%= candidato.nome %></td>
        <td><%= candidato.data_nasc %></td>
        <td><%= candidato.cep %></td>
        <td><%= candidato.logradouro %></td>
        <td><%= candidato.numero %></td>
        <td><%= candidato.bairro %></td>
        <td><%= candidato.uf %></td>
        <td><%= link_to 'Show', candidato %></td>
        <td><%= link_to 'Edit', edit_candidato_path(candidato) %></td>
        <td><%= link_to 'Destroy', candidato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidato', new_candidato_path %>

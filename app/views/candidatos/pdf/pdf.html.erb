    top: 540px;
    left: 0px;
    position: absolute;
}
.bar2 {
    background-color: rgb(51, 74, 86);
    width: 100%;
    height: 5px;
    top: 740px;
    left: 0px;
    position: absolute;
}

.bar3 {
    background-color: rgb(51, 74, 86);

    opacity: 0.5;
}

h1,
h2 {
    font-family: Georgia;
    color: rgb(51, 74, 86);
}

.people {
    background-color: rgb(242, 242, 242);
    width: 500px;
    height: 300px;
    top: -20px;
    left: 120px;
    position: absolute;
}

.bar {
    background-color: rgb(51, 74, 86);
    width: 500px;
    height: 20px;
    top: 130px;

<p id="notice"><%= notice %></p>

<%= current_user.email%>
<ul>
  <li><%= link_to "Sair", destroy_user_session_path, method: :delete%></li>
</ul>

<h1>Candidato</h1>

  <%= form_tag("show", method: :get, :class => 'form-inline my-2 my-lg-0') do %>
  <%= text_field_tag :term,nil, :class => 'form-control mr-sm-2' %>
  <%= submit_tag 'Procurar', :class => 'btn btn-outline-info my-2 my-sm-0' %> <% end %>

<table>
  <thead>
    <tr>
      <th>Cpf</th>
      <th>nome</th>
      <th>Data Nascimento</th>
      <th>CEP</th>
      <th>Logradouro</th>
      <th>Numero</th>
      <th>Bairro</th>
      <th>UF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
      <% @candidato.each do |candidato| %>
        <td><%= candidato.cpf %></td>
        <td><%= candidato.nome %></td>
        <td><%= candidato.data_nasc %></td>
        <td><%= candidato.cep %></td>
        <td><%= candidato.logradouro %></td>
        <td><%= candidato.numero %></td>
        <td><%= candidato.bairro %></td>
        <td><%= candidato.uf %></td>
        <td><%= link_to 'Edit', edit_candidato_path(candidato) %></td>
        <td><%= link_to 'Destroy', candidato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', candidatos_path %>
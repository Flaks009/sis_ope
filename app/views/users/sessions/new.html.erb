<%= render "basicForm" %>
<div id="background-menu">
  <div id="left-text">
    <div id="box-text">
      <div id="welcome-message1">Bem-vindo!</div>
      <div id="welcome-message2">Você está no Sistema de Gerenciamento de Currículos da Synergia.</div>
      <div id="welcome-message2">Faça seu login para acessar.</div>
    </div>
  </div>
  <div id="right-menu">
    <div id="menu-items">

      <div id="logos">
        <img id="logo-1" src="/img/topo-logo-synergia.png">
        <img id="logo-2" src="/img/rodape-logo-tpf.png">
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name),:class=>"login-menu") do |f| %>

        <div class="field">
          <%= f.label :email, "Email", class:"ipt-label" %><br />
          <%= f.email_field :email, autofocus: true, class:"ipt-text", autocomplete: "email", placeholder:"Digite seu email" %>
        </div>

        <div class="field">
          <%= f.label :password, "Senha", class:"ipt-label" %><br />
          <%= f.password_field :password, class:"ipt-text", autocomplete: "current-password", placeholder:"Digite sua senha" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, :id=>"remember-checkbox", :type=>"checkbox" %>
            <label for="remember-checkbox" id="remember-checkbox">Lembrar dados</label>
            <%= render "users/shared/links" %>
          </div>
        <% end %>
        
        <div class="field">
          <%= f.submit "Acessar", :id=>"btn-signin" %>
        </div>
      <% end %>
      
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= button_to "Meu primeiro acesso", new_registration_path(resource_name), :id=>"btn-signup", :method=>"get" %>
      <% end %>

    </div>
  </div>
</div>

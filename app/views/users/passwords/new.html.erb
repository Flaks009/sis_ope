<%= render "basicForm" %>
<div id="background-menu">
  <div id="menu-items">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource %>

      <div id="logos">
        <img id="logo-1" src="/img/topo-logo-synergia.png">
        <img id="logo-2" src="/img/rodape-logo-tpf.png">
      </div>

      <p id="title-user">Alteração de Senha</p>

      <div class="field">
        <%= f.label :email, "Email", class:"ipt-label" %><br />
        <%= f.email_field :email, autofocus: true, class:"ipt-text", autocomplete: "email", placeholder: "Digite seu email" %>
      </div>

      <div class="buttons">
        <%= f.submit "Enviar email com instruções", :id=>"btn-send" %>
      </div>

    <% end %>
    
    <div class="buttons">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

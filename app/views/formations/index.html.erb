<p id="notice"><%= notice %></p>

<h1>Formations</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Curso</th>
      <th>Instituicao</th>
      <th>Data inicio</th>
      <th>Data final</th>
      <th>Cpf candidato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formations.each do |formation| %>
      <tr>
        <td><%= formation.tipo %></td>
        <td><%= formation.curso %></td>
        <td><%= formation.instituicao %></td>
        <td><%= formation.data_inicio %></td>
        <td><%= formation.data_final %></td>
        <td><%= formation.cpf_candidato %></td>
        <td><%= link_to 'Show', formation %></td>
        <td><%= link_to 'Edit', edit_formation_path(formation) %></td>
        <td><%= link_to 'Destroy', formation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

